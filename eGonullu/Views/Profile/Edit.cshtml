@model User
@{
    ViewBag.Title = "Profil Düzenleme";
}

<div class="container">
    <div class="m-3"></div>
    <div class="main-body">
        <form method="post" class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@Model.PictureUrl" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Name @Model.LastName</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                            <div class="col-sm-7">
                                <input class="form-control form-control-sm"  asp-for="WebSite">
                            </div>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                            <div class="col-sm-7">
                                <input class="form-control form-control-sm" asp-for="Twitter">
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                            <div class="col-sm-7">
                                <input class="form-control form-control-sm" asp-for="Instagram">
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                            <div class="col-sm-7">
                                <input class="form-control form-control-sm" asp-for="Facebook">
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="row m-3"><h4>Profili Düzenle</h4></div>
                <div class="card mb-3">
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ad</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Soyad</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="LastName">
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">E-mail</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="Email">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="Phone">
                                <span asp-validation-for="Phone"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Tc</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="Tc">
                                <span asp-validation-for="Tc"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Fotoğraf</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="PictureUrl">
                                <span asp-validation-for="PictureUrl"></span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Yeni Şifre</h6>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" asp-for="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <input type="submit" name="save" value="Save" class="btn btn-outline-success align-content-lg-end mt-3" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

