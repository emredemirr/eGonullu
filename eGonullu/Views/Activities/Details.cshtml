@model eGonullu.ViewModels.ActivityDetailsViewModel
@{
    var buttonName = Model.IsUserParticipant ? "Ayrıl" : "Katıl";
    var buttonClass = Model.IsUserParticipant ? "danger": "success";
    var aspActionName = Model.IsUserParticipant ? "ParticipantDelete" : "ParticipantCreate";
}

<div class="container">
    <div class="m-3"></div>
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="row m-3"><h4 style="color:white">.</h4></div>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@Model.Activity.PictureUrl" alt="Admin" class="rounded-top" width="330" height="425">
                            <div class="mt-3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="row m-3"><h4>@Model.Activity.Title</h4></div>
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Etkinlik Adı: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Activity.Name</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">İl: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Activity.City</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">İlçe: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Activity.State</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adres: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Activity.AddressDetail</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Etkinlik Tarihi: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Activity.ActivityDate.ToLongDateString()</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Detay: </h6>
                            </div>
                            <div class="col-sm-9">
                                <p>
                                    @Model.Activity.Definition
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    <form asp-action=@aspActionName method="post">
                        <input type="hidden" name="activityId" value="@Model.Activity.Id" />
                        <input class="btn btn-outline-@buttonClass" type="submit" name="save" value="@buttonName">
                    </form>
                </div>
            </div>
        </div>
        <hr />
        <div class="m-2" style="text-align:center"><h3>Gönüllüler </h3><hr /></div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm">


            @if (Model.Participants.Any())
            {
                foreach (var participant in Model.Participants)
                {
                    <div class="col-md-4">
                        <div class="card profile-card-1">
                            <img src="@participant.PictureUrl" alt="profile-sample1" class="background" />
                            <img src="@participant.PictureUrl" alt="profile-image" class="profile" />
                            <div class="card-content">
                                <h3><small>@participant.Name</small></h3>
                                <h2>@participant.LastName</h2>
                                <div class="icon-block">
                                    <a href="@participant.Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
                                    <a href="@participant.Twitter" target="_blank"> <i class="fa fa-twitter"></i></a>
                                    <a href="@participant.Instagram" target="_blank"> <i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>